generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Company {
  id             Int              @id
  name           String
  ServiceRequest ServiceRequest[]
}

model ServiceRequest {
  id                String   @id @default(uuid())
  serviceType       String
  createdAt         DateTime
  total             Json
  collectionAddress Json
  deliveries        Json
  vehicles          Json
  company           Company  @relation(references: [id], fields: [companyId])
  companyId         Int
}
